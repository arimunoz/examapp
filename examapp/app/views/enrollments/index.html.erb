<p id="notice"><%= notice %></p>

<h1>Enrollments</h1>
<p>Here our the links for your convenience. </p>
<%= link_to 'Faculties', faculties_path %>
<%= link_to 'Programs', programs_path %>
<%= link_to 'Courses', courses_path %>
<%= link_to 'Student', students_path %>
<%= link_to 'Home', root_path %>
<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
<table>
  <thead>
    <tr>
      <th>Grade</th>
      <th>Student</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.grade %></td>
        <td><%= enrollment.student_id %></td>
        <td><%= enrollment.course_id %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enrollment', new_enrollment_path %>
