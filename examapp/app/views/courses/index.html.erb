<p id="notice"><%= notice %></p>

<h1>Courses</h1>
<p>Here our the links for your convenience. </p>
<%= link_to 'Faculties', faculties_path %>
<%= link_to 'Enrollments', enrollments_path %>
<%= link_to 'Programs', programs_path %>
<%= link_to 'Home', root_path %>
<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Credits</th>
      <th>Description</th>
      <th>Program</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.number %></td>
        <td><%= course.title %></td>
        <td><%= course.credits %></td>
        <td><%= course.description %></td>
        <td><%= course.program_id %></td>
        <td><%= link_to 'Show', course %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
